                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#FFE91E63"
                        android:centerColor="#B0F06292"
                        android:endColor="#80F8BBD9"
                        android:angle="-45" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            
            <!-- 第二层背景 (中间层) - 正上方偏移 - 中粉色 -->
            <item android:bottom="10dp" android:left="0dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#FFF06292"
                        android:centerColor="#90F48FB1"
                        android:endColor="#80F8BBD9"
                        android:angle="-45" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
            
            <!-- 第一层背景 (最上层) - 主背景 - 浅粉色 -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
