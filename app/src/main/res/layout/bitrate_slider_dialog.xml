<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/game_menu_dialog_bg">

    <!-- Current bitrate display -->
    <TextView
        android:id="@+id/current_bitrate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Bitrate: 10 Mbps"
        android:textSize="16sp"
        android:textColor="@color/game_menu_text_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Slider container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- Slider label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_menu_bitrate_range"
                android:textSize="14sp"
                android:textColor="@color/game_menu_text_secondary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/game_menu_bitrate_range_value"
                android:textSize="14sp"
                android:textColor="@color/game_menu_text_secondary"
                android:gravity="end" />
        </LinearLayout>

        <!-- SeekBar -->
        <SeekBar
            android:id="@+id/bitrate_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="795"
            android:progress="95"
            android:progressTint="@color/theme_pink_primary"
            android:thumbTint="@color/theme_pink_primary"
            android:splitTrack="false" />

        <!-- Current value display -->
        <TextView
            android:id="@+id/bitrate_value_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 Mbps"
            android:textSize="18sp"
            android:textColor="@color/theme_pink_primary"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Tip information -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_menu_bitrate_tip"
        android:textSize="12sp"
        android:textColor="@color/game_menu_text_secondary"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>
