<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:fadeScrollbars="false"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/customTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="🍥🍬 V+ GAME MENU"
                android:textColor="@color/game_menu_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnCrownToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:text="启用王冠菜单"
                android:textColor="@color/theme_pink_primary"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_super_crown" />

        </RelativeLayout>

        <!-- 快捷按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="6">

                <Button
                    android:id="@+id/btnWin"
                    style="@style/GameMenuButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_btn_win"
                    android:text="WIN" />

                <Button
                    android:id="@+id/btnEsc"
                    style="@style/GameMenuButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_btn_esc"
                    android:text="ESC" />

                <Button
                    android:id="@+id/btnHDR"
                    style="@style/GameMenuButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_btn_hdr"
                    android:text="HDR" />

                <Button
                    android:id="@+id/btnMic"
                    style="@style/GameMenuButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_mic_gm"
                    android:text="Mic" />

                <Button
                    android:id="@+id/btnSleep"
                    style="@style/GameMenuButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_btn_sleep"
                    android:text="睡眠" />

                <Button
                    android:id="@+id/btnQuit"
                    style="@style/GameMenuButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_btn_quit"
                    android:text="退出" />
            </LinearLayout>

        </LinearLayout>

        <!-- 菜单列表区域 -->
        <LinearLayout
            android:id="@+id/menuListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:minHeight="220dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- 普通菜单 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/gameMenuList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:dividerHeight="1dp"
                    android:fadeScrollbars="false"
                    android:scrollbars="vertical" />

            </LinearLayout>

            <!-- 超级菜单区域 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 码率调整区域 -->
                <LinearLayout
                    android:id="@+id/bitrateAdjustmentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/game_menu_bitrate_bg"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <!-- 码率调整标题 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="码率调整"
                            android:textColor="@color/game_menu_text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:drawableStart="@drawable/ic_btn_bitrate"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical" />

                        <ImageView
                            android:id="@+id/bitrateTipIcon"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_info"
                            android:layout_marginStart="6dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="提示信息"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:id="@+id/currentBitrateText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="当前: 10 Mbps"
                            android:textColor="@color/theme_pink_primary"
                            android:textSize="11sp"
                            android:gravity="end"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- 码率滑动条 -->
                    <SeekBar
                        android:id="@+id/bitrateSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="1995"
                        android:progress="95"
                        android:progressTint="@color/theme_pink_primary"
                        android:thumbTint="@color/theme_pink_primary"
                        android:splitTrack="false"
                        android:layout_marginBottom="4dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <!-- 码率值显示 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.5"
                            android:textColor="@color/game_menu_text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/bitrateValueText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10 Mbps"
                            android:textColor="@color/theme_pink_primary"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textColor="@color/game_menu_text_secondary"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 陀螺仪控制卡片 -->
                <LinearLayout
                    android:id="@+id/gyroAdjustmentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/game_menu_bitrate_bg"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <!-- 标题 + 开关按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="体感助手 · Gyro Control"
                            android:textColor="@color/game_menu_text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:drawableStart="@drawable/ic_btn_gyro"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/gyroStatusText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Off"
                            android:textColor="@color/theme_pink_primary"
                            android:textSize="11sp"
                            android:gravity="end" />

                        <Switch
                             android:id="@+id/gyroToggleSwitch"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text=""
                             android:textOn=""
                             android:textOff=""/>
                    </LinearLayout>

                    <!-- 启动键设置入口 -->
                    <LinearLayout
                        android:id="@+id/gyroActivationKeyContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="启停键 Activation Key"
                            android:textColor="@color/game_menu_text_primary"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/gyroActivationKeyText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="LT (L2)"
                            android:textColor="@color/theme_pink_primary"
                            android:textSize="11sp"
                            android:gravity="end" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="4dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:contentDescription="Set activation key" />
                    </LinearLayout>

                    <!-- 灵敏度滑动条 -->
                    <SeekBar
                        android:id="@+id/gyroSensitivitySeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="30"
                        android:progress="18"
                        android:progressTint="@color/theme_pink_primary"
                        android:thumbTint="@color/theme_pink_primary"
                        android:splitTrack="false"
                        android:layout_marginBottom="4dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <!-- 灵敏度值显示 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.5x"
                            android:textColor="@color/game_menu_text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/gyroSensitivityValueText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1.0x"
                            android:textColor="@color/theme_pink_primary"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.0x"
                            android:textColor="@color/game_menu_text_secondary"
                            android:textSize="10sp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- 超级菜单列表 -->
                <ListView
                    android:id="@+id/superMenuList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:dividerHeight="1dp"
                    android:fadeScrollbars="false"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </LinearLayout>

        <!-- App名字显示区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/appNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moonlight"
                android:textColor="@color/theme_pink_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="2dp" />


            <ImageView
                android:id="@+id/cardEditorButton"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Edit visible cards" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
