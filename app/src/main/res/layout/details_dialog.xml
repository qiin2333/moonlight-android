<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/game_menu_dialog_bg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                android:tint="@color/theme_pink_primary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/detailsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="详细信息"
                android:textColor="@color/theme_pink_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 复制按钮 -->
            <ImageButton
                android:id="@+id/copyButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_copy"
                android:background="@drawable/game_menu_button_bg"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/copy_content" />

        </LinearLayout>

        <!-- 详情内容区域 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:background="@drawable/details_content_bg"
            android:padding="12dp">

            <TextView
                android:id="@+id/detailsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/game_menu_text_secondary"
                android:textSize="14sp"
                android:lineSpacingExtra="6dp"
                android:fontFamily="monospace"
                android:padding="8dp"
                android:textIsSelectable="true"
                android:contextClickable="true"
                android:longClickable="true" />

        </ScrollView>

    </LinearLayout>

</ScrollView> 