<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_key_value_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="分区 1" />

        <com.limelight.binding.input.advance_setting.superpage.ElementEditText
            android:id="@+id/item_key_value_name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="分区名称，为空时为键值名"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_key_value_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/enabled_square"
        android:gravity="center"
        android:minWidth="80dp"
        android:maxWidth="120dp"
        android:paddingHorizontal="10dp"
        android:text="UP" />

</LinearLayout>